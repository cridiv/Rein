model GitHubAccount {
  id            String   @id @default(uuid())
  userId        String   @unique
  githubId      String   @unique
  username      String
  email         String
  avatarUrl     String?
  accessToken   String   // Encrypt in production!
  refreshToken  String?
  scopes        String[] // Array of OAuth scopes
  isActive      Boolean  @default(true)
  webhookId     String?
  webhookSecret String?
  metadata      Json?    // Additional GitHub user data
  connectedAt   DateTime @default(now())
  updatedAt     DateTime @updatedAt
  lastSyncAt    DateTime?

  // Relations
  commits       GitHubCommit[]

  @@index([userId])
  @@index([githubId])
  @@map("github_accounts")
}

model GitHubCommit {
  id            String   @id @default(uuid())
  accountId     String
  repository    String   // Format: "owner/repo"
  commitSha     String
  commitMessage String   @db.Text
  branch        String
  author        Json     // { name, email, username }
  url           String?
  committedAt   DateTime
  commitData    Json?    // Full webhook payload
  createdAt     DateTime @default(now())
  processed     Boolean  @default(false)
  metadata      Json?

  // Relations
  account       GitHubAccount @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@unique([repository, commitSha])
  @@index([accountId, createdAt])
  @@index([repository, commitSha])
  @@map("github_commits")
}

model EmailLog {
  id            String   @id @default(uuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  type          String   // "welcome", "streak_loss", "streak_reminder", "weekly_digest"
  status        String   // "sent", "failed", "bounced"
  
  sentAt        DateTime @default(now())
  errorMessage  String?  @db.Text
  metadata      Json?    // Additional data (e.g., Resend ID, template data)
  
  @@index([userId, type])
  @@index([sentAt])
  @@index([userId, type, sentAt])
  @@map("email_logs")
}

model EmailPreferences {
  id        String  @id @default(uuid())
  userId    String  @unique
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  welcomeEmail      Boolean @default(true)
  streakLossAlert   Boolean @default(true)
  streakReminder    Boolean @default(true)
  weeklyDigest      Boolean @default(true)
  milestoneEmails   Boolean @default(true)
  
  reminderTime      String  @default("18:00") // HH:MM format (e.g., "18:00" for 6 PM)
  digestDay         String  @default("sunday") // Day of week for digest
  timezone          String  @default("UTC")     // User's timezone (e.g., "America/New_York")
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@map("email_preferences")
}