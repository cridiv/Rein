generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL") 
}

model User {
  id        String    @id @default(uuid())
  email     String?   @unique
  name      String?
  sessions  ClarificationSession[]
  resolutions  Resolution[]    
  nodeProgress NodeProgress[]  
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  lastWeeklyDigest   DateTime?
  lastStreakReminder DateTime?
  emailPreferences   EmailPreferences?  // NEW
  emailLogs          EmailLog[] 

  @@map("users")
}

model ClarificationSession {
  id              String   @id @default(uuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  prompt          String
  missingFields   Json?
  conversationHistory Json?
  status          String   @default("active") // active, completed, abandoned
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("clarification_sessions")
}

model Resolution {
  id          String    @id @default(uuid())
  userId      String
  title       String
  goal        String
  roadmap     Json      // Stores the ParsedResolution array with dates
  startDate   DateTime? 
  endDate     DateTime? 
  isPublic    Boolean   @default(false)
  status      String    @default("pending")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  nodeProgress NodeProgress[]
  streak       Streak?

  @@index([userId])
  @@map("resolutions")
}

model Commitment {
  id              String   @id @default(cuid())
  userId          String   @map("user_id")
  platformUserId  String?  @map("platform_user_id")
  commitmentText  String   @map("commitment_text")
  deadline        DateTime
  context         String?
  channelOrDm     String   @map("channel_or_dm")
  createdAt       DateTime @default(now()) @map("created_at")
  status          String   @default("pending")
  
  reminders       Reminder[]
  escalations     Escalation[]
  
  @@map("commitments")
}

model Reminder {
  id             String    @id @default(cuid())
  commitmentId   String    @map("commitment_id")
  sentAt         DateTime  @default(now()) @map("sent_at")
  messageId      String    @map("message_id")
  responseType   String?   @map("response_type")
  responseText   String?   @map("response_text")
  responseAt     DateTime? @map("response_at")
  
  commitment     Commitment @relation(fields: [commitmentId], references: [id], onDelete: Cascade)
  
  @@map("reminders")
}

model Escalation {
  id             String   @id @default(cuid())
  commitmentId   String   @map("commitment_id")
  escalatedAt    DateTime @default(now()) @map("escalated_at")
  reason         String
  messageId      String   @map("message_id")
  
  commitment     Commitment @relation(fields: [commitmentId], references: [id], onDelete: Cascade)
  
  @@map("escalations")
}

model SlackConnection {
  id              String   @id @default(cuid())
  userId          String   @unique @map("user_id")
  workspaceId     String   @map("workspace_id")
  workspaceName   String?  @map("workspace_name")
  botAccessToken  String   @map("bot_access_token")
  slackUserId     String   @map("slack_user_id")
  slackUserName   String?  @map("slack_user_name")
  scope           String?
  connectedAt     DateTime @default(now()) @map("connected_at")
  updatedAt       DateTime @updatedAt @map("updated_at")
  
  @@map("slack_connections")
}

model CalendarConnection {
  id              String   @id @default(cuid())
  userId          String   @unique @map("user_id")
  accessToken     String   @map("access_token")
  refreshToken    String?  @map("refresh_token")
  tokenType       String?  @map("token_type")
  expiryDate      String?  @map("expiry_date")
  scope           String?
  connectedAt     DateTime @default(now()) @map("connected_at")
  updatedAt       DateTime @updatedAt @map("updated_at")
  
  @@map("calendar_connections")
}

model NodeProgress {
  id            String    @id @default(uuid())
  userId        String
  resolutionId  String
  nodeId        String
  stageId       String
  scheduledDate DateTime  @db.Date
  completedAt   DateTime?
  status        String    @default("pending")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  resolution Resolution @relation(fields: [resolutionId], references: [id], onDelete: Cascade)

  @@unique([userId, resolutionId, nodeId])
  @@index([userId, scheduledDate])
  @@index([userId, status])
  @@index([resolutionId])
  @@index([scheduledDate])
  @@map("node_progress")
}

model Streak {
  id            String   @id @default(uuid())
  resolutionId  String   @unique
  currentStreak Int      @default(0)
  longestStreak Int      @default(0)
  lastActivity  DateTime @default(now())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  resolution Resolution @relation(fields: [resolutionId], references: [id], onDelete: Cascade)

  @@index([resolutionId])
  @@map("streaks")
}

